# PX4 Quadcopter X Configuration
# Airframe: Generic Quadcopter X

param set-default SYS_AUTOSTART 4001

# Control Allocation
param set-default CA_ROTOR_COUNT 4

# Motor 0: Front Right (CW)
param set-default CA_ROTOR0_PX 0.15
param set-default CA_ROTOR0_PY -0.15
param set-default CA_ROTOR0_PZ 0.0
param set-default CA_ROTOR0_AX 0
param set-default CA_ROTOR0_AY 0
param set-default CA_ROTOR0_AZ -1
param set-default CA_ROTOR0_KM 0.05

# Motor 1: Back Left (CW)
param set-default CA_ROTOR1_PX -0.15
param set-default CA_ROTOR1_PY 0.15
param set-default CA_ROTOR1_PZ 0.0
param set-default CA_ROTOR1_AX 0
param set-default CA_ROTOR1_AY 0
param set-default CA_ROTOR1_AZ -1
param set-default CA_ROTOR1_KM 0.05

# Motor 2: Front Left (CCW)
param set-default CA_ROTOR2_PX 0.15
param set-default CA_ROTOR2_PY 0.15
param set-default CA_ROTOR2_PZ 0.0
param set-default CA_ROTOR2_AX 0
param set-default CA_ROTOR2_AY 0
param set-default CA_ROTOR2_AZ -1
param set-default CA_ROTOR2_KM -0.05

# Motor 3: Back Right (CCW)
param set-default CA_ROTOR3_PX -0.15
param set-default CA_ROTOR3_PY -0.15
param set-default CA_ROTOR3_PZ 0.0
param set-default CA_ROTOR3_AX 0
param set-default CA_ROTOR3_AY 0
param set-default CA_ROTOR3_AZ -1
param set-default CA_ROTOR3_KM -0.05
